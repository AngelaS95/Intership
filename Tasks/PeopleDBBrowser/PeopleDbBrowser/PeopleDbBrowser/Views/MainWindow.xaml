<Window x:Class="Internship.PeopleDbBrowser.Views.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Internship.PeopleDbBrowser.Views"
      xmlns:workspace="clr-namespace:Internship.PeopleDbBrowser.Workspaces"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainWindow">
    <Window.DataContext>
        <workspace:MainWorkspace />
    </Window.DataContext>

    <Grid>
            <ToggleButton Name="btnSettings" IsChecked="{Binding IsSettingsCommandChecked}"  Height="37" Width="105" Content="Settings"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Checked="ToggleButton_Checked"/>
            <ToggleButton Name="btnImport" IsChecked="{Binding IsImportCommandChecked}" Height="37" Width="105" Content="Import"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,57,0,0" Checked="ToggleButton_Checked_1"/>
            <ToggleButton Name="btnSearch" IsChecked="{Binding IsSearchCommandChecked}" Height="37" Width="105" Content="Search"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,99,0,0" Checked="ToggleButton_Checked_2"/>
            <ContentControl Content="{Binding CurrentView}" Margin="154,0,0,10"/>
    </Grid>
</Window>
